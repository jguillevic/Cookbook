<UserControl
    x:Class="Cookbook.UI.View.Recipe.EditMeasureUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Orientation="Vertical">
        <TextBox Header="Nom" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="400"/>
        <TextBox Header="Code" Text="{Binding Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="400" Margin="5 0 0 0"/>
    </StackPanel>
</UserControl>
